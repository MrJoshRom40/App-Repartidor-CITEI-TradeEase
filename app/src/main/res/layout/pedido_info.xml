<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/Pedidocard"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/azul">

        <!--Linear layout principal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Linear layout del nombre y nÃºmero de venta-->
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Nombre_pedido"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:hint="Joshua Alejandro Romo Cuarenta"
                    />
                <TextView
                    android:id="@+id/NumVenta_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:hint="7777777777"
                    />
            </LinearLayout>

            <!--Linear layout del telefono y direccion-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Telefono_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:hint="3326995066"
                    />

                <TextView
                    android:id="@+id/Direccion_pedido"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:hint="Av San Mateo 1155 41 45200 Guadalajara"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>